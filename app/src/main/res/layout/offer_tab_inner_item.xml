<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp">

        <TextView
            android:id="@+id/tvVerified"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="verified today"
            android:textColor="@color/colorAccent"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/tvUsed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="20 People Used Today"
            android:layout_marginLeft="50dp"
            android:textSize="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tvOff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="25% OFF"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="21dp"/>
        <TextView
            android:id="@+id/tvOffOn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Flat Rs. 200 Off on Paying Through HDFC Bank Debit/Credit Cards (New Users)"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvOffOnAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="Flat Rs. 200 Off on Paying Through HDFC Bank Debit/Credit Cards"
        android:textSize="15dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cvCoupon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="15dp"
        android:elevation="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="25dp"
        android:backgroundTint="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvCouponCode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16dp"
            android:text="HDFC22"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:text="Click and Proceed"
                android:textStyle="bold"
                android:textColor="#ffffff" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="15dp"></View>





</LinearLayout>